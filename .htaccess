<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Redirect to the public folder
    RewriteCond %{REQUEST_URI} !^/public/
  
    RewriteRule ^(.*)$ /public/$1 [L]

    
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/index.php [L]
</IfModule>
